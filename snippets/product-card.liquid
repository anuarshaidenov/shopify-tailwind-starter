{%- assign p = product -%}
<article class="group border rounded overflow-hidden hover:shadow-sm transition">
  <a href="{{ p.url }}" class="block">
    {% if p.featured_image %}
      <img
        src="{{ p.featured_image | image_url: width: 800 }}"
        alt="{{ p.title }}"
        class="w-full aspect-square object-cover"
      >
    {% else %}
      <div class="w-full aspect-square bg-gray-100"></div>
    {% endif %}
    <div class="p-3">
      <h3 class="text-sm font-medium group-hover:underline">{{ p.title }}</h3>
      <div class="text-sm text-gray-700 mt-1">{% render 'price', product: p %}</div>
    </div>
  </a>
</article>