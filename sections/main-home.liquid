<section class="container mx-auto px-4 py-12">
  <div class="text-center mb-12">
    <h1 class="text-3xl md:text-4xl font-semibold mb-3">Welcome to {{ shop.name }}</h1>
    <p class="text-gray-600">Your tagline here.</p>
  </div>

  {% if collections.frontpage.products_count > 0 %}
    <h2 class="text-xl font-semibold mb-6">Featured products</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {% for product in collections.frontpage.products limit:8 %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  {% else %}
    <div class="text-gray-600">Assign products to the "Home page" collection to feature them here.</div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Main home",
  "settings": []
}
{% endschema %}