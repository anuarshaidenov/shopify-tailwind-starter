<footer class="border-t">
  <div class="container mx-auto px-4 py-10 grid gap-6 md:grid-cols-3">
    <div>
      <div class="text-lg font-semibold mb-2">{{ shop.name }}</div>
      <p class="text-sm text-gray-600">{{ settings.footer_note }}</p>
    </div>
    <div>
      {% if settings.footer_menu != blank %}
        <div class="text-sm font-medium mb-2">Links</div>
        <ul class="space-y-1">
          {% for link in linklists[settings.footer_menu].links %}
            <li><a href="{{ link.url }}" class="text-sm text-gray-700 hover:text-gray-900">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
    <div class="text-sm text-gray-600">
      <div>{{ shop.addresses.first.address1 }}</div>
      <div>{{ shop.email }}</div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}