<section class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold mb-6">{{ 'search.general.title' | t }}</h1>
  <form action="{{ routes.search_url }}" method="get" role="search" class="mb-6">
    <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search products" class="w-full border rounded px-3 py-2">
  </form>

  {% if search.performed %}
    {% if search.results_count == 0 %}
      <p class="text-gray-600">No results found.</p>
    {% else %}
      {% paginate search.results by 24 %}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {% for item in search.results %}
            {% if item.object_type == 'product' %}
              {% render 'product-card', product: item %}
            {% endif %}
          {% endfor %}
        </div>
        {% render 'pagination', paginate: paginate %}
      {% endpaginate %}
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "Main search",
  "settings": []
}
{% endschema %}