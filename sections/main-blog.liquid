<section class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold mb-6">{{ blog.title }}</h1>
  {% paginate blog.articles by 12 %}
    <div class="grid md:grid-cols-3 gap-6">
      {% for article in blog.articles %}
        <article class="border rounded p-4 hover:shadow-sm transition">
          <a href="{{ article.url }}" class="block">
            {% if article.image %}
              <img src="{{ article.image | image_url: width: 800 }}" alt="{{ article.title }}" class="mb-3 rounded">
            {% endif %}
            <h2 class="text-lg font-semibold mb-1">{{ article.title }}</h2>
            <p class="text-sm text-gray-600">{{ article.excerpt_or_content | strip_html | truncate: 120 }}</p>
          </a>
        </article>
      {% endfor %}
    </div>
    {% render 'pagination', paginate: paginate %}
  {% endpaginate %}
</section>

{% schema %}
{
  "name": "Main blog",
  "settings": []
}
{% endschema %}