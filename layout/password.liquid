<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1%">
    <title>{{ shop.name }} â€” Password</title>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body class="min-h-screen grid place-items-center bg-gray-50 text-gray-900">
    <div class="w-full max-w-md p-6 bg-white rounded-lg shadow">
      <h1 class="text-2xl font-semibold mb-4">{{ shop.name }}</h1>
      <p class="text-sm text-gray-600 mb-6">{{ 'general.password_page.opening_soon' | t }}</p>
      {% form 'storefront_password' %}
        <label for="password" class="block text-sm font-medium mb-2">Enter store password</label>
        <input id="password" type="password" name="password" class="w-full border rounded px-3 py-2 mb-3" autocomplete="current-password">
        <button class="w-full bg-gray-900 text-white px-4 py-2 rounded hover:bg-black">Enter</button>
      {% endform %}
    </div>
  </body>
</html>