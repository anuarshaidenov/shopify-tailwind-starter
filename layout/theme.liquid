<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1%">
    <title>
      {% if page_title %}{{ page_title }}{% endif %}
      {% if current_tags %} – {{ current_tags | join: ', ' }}{% endif %}
      {% if current_page != 1 %} – Page {{ current_page }}{% endif %}
      {% unless page_title contains shop.name %} – {{ shop.name }}{% endunless %}
    </title>
    {% render 'meta-tags' %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-white text-blue-600 px-3 py-2 rounded">
      Skip to content
    </a>

    {% section 'announcement-bar' %}
    {% section 'header' %}

    <main id="main-content" role="main" class="flex-1">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
  </body>
</html>