<section class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold mb-6">Account</h1>

  <div class="mb-8">
    <div class="text-sm text-gray-600">Logged in as {{ customer.email }}</div>
    <a href="{{ routes.account_logout_url }}" class="text-sm text-gray-700 hover:text-gray-900">Log out</a>
  </div>

  <h2 class="text-lg font-semibold mb-4">Orders</h2>
  {% if customer.orders.size == 0 %}
    <p class="text-gray-600">You havenâ€™t placed any orders yet.</p>
  {% else %}
    <div class="overflow-x-auto">
      <table class="w-full text-left">
        <thead class="border-b">
          <tr>
            <th class="py-2">Order</th>
            <th class="py-2">Date</th>
            <th class="py-2">Payment</th>
            <th class="py-2">Fulfillment</th>
            <th class="py-2">Total</th>
          </tr>
        </thead>
        <tbody>
          {% for order in customer.orders %}
            <tr class="border-b">
              <td class="py-2"><a href="{{ order.customer_url }}" class="text-sm text-blue-600 hover:underline">{{ order.name }}</a></td>
              <td class="py-2 text-sm">{{ order.created_at | date: format: 'date' }}</td>
              <td class="py-2 text-sm">{{ order.financial_status_label }}</td>
              <td class="py-2 text-sm">{{ order.fulfillment_status_label }}</td>
              <td class="py-2 text-sm">{{ order.total_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}

  <div class="mt-8">
    <a href="{{ routes.account_addresses_url }}" class="text-sm text-gray-700 hover:text-gray-900">Manage addresses</a>
  </div>
</section>