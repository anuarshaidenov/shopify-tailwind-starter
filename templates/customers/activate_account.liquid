<section class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-semibold mb-6">Activate account</h1>
  {% form 'activate_customer_password' %}
    <div class="mb-4">
      <label class="block text-sm font-medium mb-1">Password</label>
      <input type="password" name="customer[password]" class="w-full border rounded px-3 py-2">
    </div>
    <div class="mb-6">
      <label class="block text-sm font-medium mb-1">Confirm password</label>
      <input type="password" name="customer[password_confirmation]" class="w-full border rounded px-3 py-2">
    </div>
    <button class="bg-gray-900 text-white px-5 py-2 rounded hover:bg-black">Activate</button>
  {% endform %}
</section>